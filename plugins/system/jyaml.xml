  <languages>
    <language tag="de-DE">language/de-DE.plg_system_jyaml.ini</language>
    <language tag="en-GB">language/en-GB.plg_system_jyaml.ini</language>
  </languages>
  
  <files>
    <filename plugin="jyaml">jyaml.php</filename>
    <filename>jyaml/jyaml.helper.php</filename>
  </files>

