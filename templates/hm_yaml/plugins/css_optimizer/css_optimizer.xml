<jyaml_plugin>
  <name>CSS Optimizer</name>
  <author>Reinhard Hiebl</author>
  <creationDate>November 2007</creationDate>
  <copyright>(C) Reinhard Hiebl</copyright>
  <license>http://www.jyaml.de</license>
  <authorEmail>service@hieblmedia.de</authorEmail>
  <authorUrl>www.hieblmedia.de</authorUrl>
  <version>1.1</version>
  <description>YAML CSSOPTIMIZER_PGL DESC</description>
  
  <params>
    <param name="published" type="radio" default="0" label="Enabled" description="Enabled">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
    <param name="@spacer" type="spacer" default="" label="" description="" />

    <param name="merge_files" type="radio" default="0" label="YAML CSSOPTIMIZER_PGL LABEL MERGE FILES" description="YAML CSSOPTIMIZER_PGL DESC MERGE FILES">
      <option value="0">NO</option>
      <option value="1">YES</option>
    </param>   
    
    <param name="excude_folders" type="text" default="patches" label="YAML CSSOPTIMIZER_PGL LABEL EXCLUDE FOLDERS" description="YAML CSSOPTIMIZER_PGL DESC EXCLUDE FOLDERS" />
  </params>
</jyaml_plugin>